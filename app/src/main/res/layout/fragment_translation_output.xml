<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prashantsolanki.blackshift.trans.ui.TranslationOutputFragment">

    <TextView
        android:id="@+id/output_speech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/output_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="3"
        android:textSize="40sp"
        autofit:minTextSize="16sp" />

    <LinearLayout
        android:id="@+id/output_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:minHeight="48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/output_star"
            android:layout_width="0dp"
            android:contentDescription="@string/cd_star"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp" />

        <ImageView
            android:id="@+id/output_copy"
            android:layout_width="0dp"
            android:contentDescription="@string/cd_copy"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp" />

        <ImageView
            android:id="@+id/output_share"
            android:layout_width="0dp"
            android:contentDescription="@string/cd_share"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center" />
</FrameLayout>
